{
    "exclude": [
        "dist",
        "node_modules"
    ],
    "include": [
        "src/index.ts"
    ],
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true
    }
}